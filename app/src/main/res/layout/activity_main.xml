<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:background="#28D1E6"
    android:padding="24dp"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastro Escola Estadual Irineu"
        android:layout_centerHorizontal="true"
        android:layout_margin="80dp"
        android:textColor="#0E0E0E"
        android:textSize="30dp"
        android:textStyle="bold"
        android:singleLine="false"
        android:ellipsize="none"
        android:maxLines="3"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/escolhas_layout"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_abre_tela_cadastro_alunos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FBFBFB"
            android:text="Cadastro de Alunos"
            android:textColor="@color/black"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/btn_abre_tela_lista_alunos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FBFBFB"
            android:text="Lista de Alunos"
            android:textColor="@color/black"
            android:textSize="24sp"/>

    </LinearLayout>

</RelativeLayout>